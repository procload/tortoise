source 'https://rubygems.org'

# Use SASS 3.3 for Bourbon 4 and Susy 2
gem 'sass'

# Use Susy for our grid system
gem 'susy'

# Use Thoughtbot's Bourbon for SASS mixins and helpers
gem 'bourbon'

# Use Autoprefixer so we no longer need to use mixins for CSS3 properties
gem 'middleman-autoprefixer'

# Use livereload for easy editing
gem 'middleman-livereload'

# Use Kramdown for Markdown
gem 'kramdown', '~> 1.4.0'

# Redcarpet
gem 'redcarpet'

# Use Nokogiri for blog summaries
gem 'nokogiri'

# Coffee Script
gem 'coffee-script'

# Use builder to generate XML
gem 'builder'

# Middleman Deploy for deploying to Github
gem 'middleman-gh-pages'

# Use uglifier to compress JS
gem 'uglifier'

# Middleman blog
gem 'middleman-blog'

# Middleman
gem 'middleman'

# Contenful CMS
gem 'contentful_middleman'

gem "neat"
